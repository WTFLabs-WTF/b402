{
  "name": "x402_monorepo",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=10.7.0"
  },
  "packageManager": "pnpm@10.7.0",
  "private": "true",
  "version": "0.0.2",
  "description": "x402 Payment Protocol Monorepo",
  "main": "index.js",
  "scripts": {
    "build": "turbo run build",
    "lint": "turbo run lint",
    "format": "turbo run format",
    "lint:check": "turbo run lint:check",
    "format:check": "turbo run format:check",
    "test": "turbo run test",
    "publish:all": "pnpm publish -r --access public --no-git-checks",
    "publish:all-beta": "pnpm publish -r --access public --no-git-checks --tag beta",
    "version:patch": "pnpm -r exec npm version patch",
    "version:minor": "pnpm -r exec npm version minor",
    "version:major": "pnpm -r exec npm version major",
    "version:patch-beta": "pnpm -r exec npm version prerelease --preid=beta"
  },
